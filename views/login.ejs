<link rel="stylesheet" href="/css/styles.css">
</head>

<body>



<section id="login-route">


               <h1>Online Exam Portel</h1>
              
      <center> <p class="floating-cont" style="color:white;"> Please login to your account </p> </center>

      <!-- login form -->
      <div class="login-form">
        <% if(messages.error){ %>
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4 class="alert-heading"><%= messages.error %></h4>  
          </div>
          <%}%>
          <form class="form-login" action="/login" method="post">
              <div class="container1">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                  <label>Enter your Email : </label>
                  <input type="text" placeholder="Enter Email Id" name="username" required>
                  <label>Password : </label>
                  <input type="password" placeholder="Enter Password" name="password" required>
                  <br><button class="bton" type="submit">Login</button></br>
                  <a class="cls" href="/reset-password">Forgot password?</a>
                  <br>
                  <a class="cls" href="/signup">Sign Up</a>
                  <br>
                  <a class="home-icon fas fa-home fa-4" href="/"></a>
              </div>
          </form>
     </div>

</section>



<!-- FOOTER -->
 <section id="footer">

   <footer>
