  </head>
  <body> 
    <% if(quiz[0] === undefined){ %>
      <h1>404! Content Not Found</h1>
    <% } %>



    <% if(quiz[0] !== undefined){ %>
  <!-- routes section -->

      <div class="wrapper" id="testsetter">
   <!-- sidebarr -->
             <nav id="sidebar">
               <div class="sidebar-header">
                 <h3>OXA Portal</h3>
               </div>

               <ul class="list-unstyled components">
                 <h2>QUIZ Name</h2>
                 <!-- <li class='active'>
                   <a href="#QuestionsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Questions</a>
                   <ul class="collapse list-unstyled" id="QuestionsSubmenu">
                     <li>
                       <a href="#">Solved</a>
